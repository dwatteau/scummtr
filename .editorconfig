root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true

[*.1]
trim_trailing_whitespace = true

[*.{cpp,h,hpp,sh}]
indent_style = tab
tab_width = 8
trim_trailing_whitespace = true

[*.{yml,yaml}]
indent_size = 2
indent_style = space
trim_trailing_whitespace = true

[Dockerfile*]
indent_style = tab
tab_width = 8
trim_trailing_whitespace = true

[CMakeLists.txt]
indent_size = 4
indent_style = space
trim_trailing_whitespace = true
